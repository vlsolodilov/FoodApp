<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/regular_text</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="RegularText" parent="TitleText">
        <item name="fontWeight">700</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/sf_ui_display</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="MenuText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="ColoredText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/sf_ui_display</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/sf_ui_display</item>
        <item name="fontWeight">400</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="android:textAlignment">center</item>
        <item name="chipBackgroundColor">@color/background_color_chip_state_list</item>
        <item name="android:textColor">@color/text_color_chip_state_list</item>
    </style>

</resources>